<?xml version="1.0"?>

<PropertyList>

 <sim>

  <fuel-fraction>0.7</fuel-fraction>
  
  <sound>
   <path>Aircraft/fokker100/fokker100-sound.xml</path>
  </sound>

  <model>
   <path>Aircraft/fokker100/Models/fokker100.xml</path>
  </model>

  <virtual-cockpit archive="y">true</virtual-cockpit>

  <chase-distance-m type="double" archive="y">-50.0</chase-distance-m>

  <help>
   <title>Fokker 100</title>
   <key>
    <name>Ctrl-b</name>
    <desc>toggle speed brake</desc>
   </key>
   <key>
    <name>Delete</name>
    <desc>toggle thrust reverser</desc>
   </key>
   <key>
    <name>S</name>
    <desc>toggle spoilers</desc>
   </key>
  </help>
 </sim>

 <engines>
  <engine n="0">
    <running>true</running>
  </engine>
  <engine n="1">
    <running>true</running>
  </engine>
 </engines>

 <input>
  <keyboard>
   <key n="83">
    <name>S</name>
    <desc>Toggle spoilers.</desc>
    <binding>
     <command>property-toggle</command>
     <property>/controls/flight/spoilers</property>
    </binding>
   </key>

   <!-- set 12.5% flap adjustment with each detent -->
   <key n="91">
    <name>[</name>
    <desc>Decrease flaps.</desc>
    <binding>
     <command>property-adjust</command>
     <property>/controls/flight/flaps</property>
     <step type="double">-0.125</step>
    </binding>
   </key>
   <key n="93">
    <name>]</name>
    <desc>Increase flaps.</desc>
    <binding>
     <command>property-adjust</command>
     <property>/controls/flight/flaps</property>
     <step type="double">0.125</step>
    </binding>
   </key>

   <key n="127">
    <name>Delete</name>
    <desc>Toggle Reversers</desc>
    <binding>
     <command>nasal</command>
     <script>reversethrust.togglereverser()</script>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/controls/engines/engine[0]/reverser</property>
    </binding>
    <binding>
     <command>property-toggle</command>
     <property>/controls/engines/engine[1]/reverser</property>
    </binding>
   </key>
  </keyboard>
 </input>

 <consumables>
  <fuel> <!-- 13365 litres -->
   <tank n="0">
    <level-gal_us archive="y">2070</level-gal_us>
   </tank>
   <tank n="1">
    <level-gal_us archive="y">2070</level-gal_us>
   </tank>
  </fuel>
 </consumables>

 <nasal>
  <reversethrust>
   <file>Aircraft/fokker100/Nasal/reverse-thrust.nas</file>
  </reversethrust>
 </nasal>

</PropertyList>
